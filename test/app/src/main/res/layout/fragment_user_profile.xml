<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="cabonline.se.test.fragment.UserSettingsFragment">

    <RelativeLayout
        android:id="@+id/nameRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:paddingBottom="12dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/nameIcon"
            style="@style/settings_icon"
            android:src="@drawable/ic_profile"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/nameIcon"
            android:layout_toLeftOf="@+id/nameEdit"
            android:layout_toRightOf="@+id/nameIcon"
            android:layout_toStartOf="@+id/nameEdit"
            android:orientation="vertical">

            <TextView
                style="@style/settings_row_title"
                android:text="@string/name"/>

            <TextView
                android:id="@+id/name"
                style="@style/settings_row_desc"
                android:text=""
                android:visibility="visible"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/nameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_edit"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:paddingBottom="12dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/phoneIcon"
            style="@style/settings_icon"
            android:src="@drawable/ic_phone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/phoneIcon"
            android:layout_toRightOf="@+id/phoneIcon"
            android:orientation="vertical">

            <TextView
                style="@style/settings_row_title"
                android:text="@string/phone_number"/>

            <TextView
                android:id="@+id/phone"
                style="@style/settings_row_desc"
                android:text=""
                android:visibility="visible"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/phoneEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_edit"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:paddingBottom="12dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/emailIcon"
            style="@style/settings_icon"
            android:src="@drawable/ic_phone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/emailIcon"
            android:layout_toRightOf="@+id/emailIcon"
            android:orientation="vertical">

            <TextView
                style="@style/settings_row_title"
                android:text="@string/email"/>

            <TextView
                android:id="@+id/email"
                style="@style/settings_row_desc"
                android:text=""
                android:visibility="visible"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/emailEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_edit"/>

    </RelativeLayout>
</LinearLayout>
